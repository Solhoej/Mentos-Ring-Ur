long value;

long EncoderFunc()
{
  if(usingGlobal == true)
  {
    long EnkoderValue = enkoder.read();

    value = EnkoderValue / 4;

    long newPosition = value;
    if (newPosition != oldPosition) 
    {
      oldPosition = newPosition;
      digitalWrite(beepPin, HIGH);
      delay(1);
      digitalWrite(beepPin, LOW);
    }

    if (value < 0)
    {
      enkoder.write(16);
      EnkoderValue = enkoder.read();
      value = EnkoderValue / 4;
    }
    if (value > 4)
    {
      enkoder.write(0);
      EnkoderValue = enkoder.read();
      value = EnkoderValue / 4;
    }
    return value;
  }
}
