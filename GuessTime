void GuessTime() 
{

     switch(Index) {
    case 0:
      SwitchScreen(EncoderFunc());
      if (ButtonFunc("Guess Time",2)){
        Index++;
        GuessText = "Using Guess Ur";
        callGuess = true;
      }
      break;
    case 1:

      if (ButtonFunc("Guess Time",2)){
        Index = 0;
        GuessText = "Guess Ur";
        callGuess = true;
      }

      break;
    default:
      break;
  }

    if(callGuess == true) 
  {
    int Index = 0;

    lcd.begin(16, 2);
    lcd.print(GuessText);
    Serial.println(state);
    callStop = true;
    callGuess = false;
    callBoil = true;
    callAlarm = true;
    callClock = true;
    const int colorR = 0;
    const int colorG = 0;
    const int colorB = 255;
    lcd.setRGB(colorR, colorG, colorB);
  }

}
