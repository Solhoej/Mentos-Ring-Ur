void GuessTime() 
{
  String(text);

  if(callGuess == true) 
  {
    if(usingGlobal == false)
    {
      text = "Using Guess Cock";  
    }
    else if(usingGlobal == true)
    {
      text = "Guess Cock";  
    }

    int Index = 0;

    lcd.begin(16, 2);
    lcd.print(text);
    Serial.println(state);
    callStop = true;
    callGuess = false;
    callBoil = true;
    callAlarm = true;
    callClock = true;
    const int colorR = 0;
    const int colorG = 0;
    const int colorB = 255;
    lcd.setRGB(colorR, colorG, colorB);
  }

     switch(Index) {
    case 0:
      SwitchScreen(EncoderFunc());
      if (ButtonFunc("Guess Time",2)){
        Index++;
      }
      break;
    case 1:

      if (ButtonFunc("Guess Time",2)){
        Index = 0;
      }

      break;
    default:
      break;
  }

}
