bool ButtonFunc(String arg, int lastState)
{
  buttonState = digitalRead(buttonPin);
  if (buttonState == HIGH && buttonPressed == false) 
  {
    // turn LED on:
    buttonPressed = true;
    usingGlobal = !usingGlobal;
    Serial.println("Pressed " + arg);
    return true;
  } 
  else if(buttonState == LOW && buttonPressed == true) 
  {
    // turn LED off:
    buttonPressed = false;
    Serial.println("Let go");
    digitalWrite(beepPin, HIGH);
    delay(10);
    digitalWrite(beepPin, LOW);
    return false;
  }
  return false;
}
