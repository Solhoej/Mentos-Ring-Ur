void Alarm() 
{
  if(callAlarm == true) 
  {
    lcd.begin(16, 2);
    lcd.print("Alarm Cock");
    Serial.println(state);
    callStop = true;
    callGuess = true;
    callBoil = true;
    callClock = true;
    callAlarm = false;
    const int colorR = 0;
    const int colorG = 255;
    const int colorB = 255;
    lcd.setRGB(colorR, colorG, colorB);
  }
}
