#include <rgb_lcd.h>
#include <Encoder.h>

Encoder enkoder(4, 5);
rgb_lcd lcd;

const int buttonPin = 2;
const int beepPin = 3;

int colorR = 255;
int colorG = 255;
int colorB = 255;

String(ClockText) = "Cock";
String(StopText) = "Stop Ur";
String(GuessText) = "Guess Ur";
String(BoilText) = "Boil Egg";
String(AlarmText) = "Alarm";

int buttonState = 0;
int state = 0;
int boilState = 0;

int Index = 0;

int Time = 0;

bool usingGlobal = true;

long oldPosition  = -999;

bool lastButtonState = HIGH;

bool callClock = true;
bool callStop = false;
bool callGuess = false;
bool callBoil = false;
bool callAlarm = false;

bool usingBoil = false;

bool buttonPressed = false;

byte amogus[8] = {
    0b00100,
    0b01010,
    0b00100,
    0b10101,
    0b01110,
    0b00100,
    0b00100,
    0b01010
};

void Clock();
void StopUr();
void GuessTime();
void BoilEgg();
void Alarm();

void (*functionArray[])() = {Clock, StopUr, GuessTime, BoilEgg, Alarm};

void setup() 
{
  Serial.begin(9600);

  lcd.begin(16, 2);
  lcd.setRGB(colorR, colorG, colorB);

  enkoder.write(0);

  pinMode(beepPin, OUTPUT);
  pinMode(buttonPin, INPUT);

}

void loop() 
{

  digitalWrite(beepPin, LOW);

  functionArray[state]();

  Time++;

}
