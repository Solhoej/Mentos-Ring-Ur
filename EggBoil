

void BoilEgg() 
{

    switch(Index) {
    case 0:
      SwitchScreen(EncoderFunc());
      if (ButtonFunc("Boil Egg",3)){
        Index++;
        BoilText = "Using Boil Egg";
        callBoil = true;
      }
      break;
    case 1:

      if (ButtonFunc("Boil Egg",3)){
        Index = 0;
        BoilText = "Boil Egg";
        callBoil = true;
      }

      break;
    default:
      break;
  }

    if(callBoil == true) 
  {
    int Index = 0;

    lcd.begin(16, 2);
    lcd.print(BoilText);
    Serial.println(state);
    callStop = true;
    callGuess = true;
    callBoil = false;
    callAlarm = true;
    callClock = true;
        colorR = 204;
        colorG = 255;
        colorB = 236;
    lcd.setRGB(colorR, colorG, colorB);
  }

}
